<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/profile_avatar_friend_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_person_24dp" />

    <TextView
        android:id="@+id/name_friend_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profile_avatar_friend_image_view"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/profile_avatar_friend_image_view"
        android:layout_toRightOf="@id/profile_avatar_image_view"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Name Surname" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_avatar_friend_image_view"
        android:layout_marginTop="8sp"
        android:background="@color/backgroundGray" />
</RelativeLayout>